from algebra import mod_inv, int_to_bytes
from random import randint

# MODP Group 24 Parameters
PARAM_P = 
PARAM_Q = 0x8CF83642A709A097B447997640129DA299B1A47D1EB3750BA308B0FE64F5FBD3
PARAM_G = 

# Key Generation
def EG_generate_keys():
    private_key = randint(1, PARAM_Q - 1)  # Secret key
    public_key = pow(PARAM_G, private_key, PARAM_P)  # g^x mod p
    return private_key, public_key

# Additive Encryption
def EGA_encrypt(message, public_key):
    k = randint(1, PARAM_Q - 1)  # Random nonce
    r = pow(PARAM_G, k, PARAM_P)  # r = g^k mod p
    c = (message + pow(public_key, k, PARAM_P)) % PARAM_P  # c = m + y^k mod p
    return r, c

# Decryption
def EG_decrypt_additive(r, c, private_key):
    s = pow(r, private_key, PARAM_P)  # Shared secret s = r^x mod p
    message = (c - s) % PARAM_P  # m = c - s mod p
    return message

# Brute force search to recover m
def bruteLog(g, c, p):
    s = 1
    for i in range(p):
        if s == c:
            return i
        s = (s * g) % p
    return -1

# Demonstration
def additive_homomorphic_demo():
    # Key generation
    private_key, public_key = EG_generate_keys()

    # Messages
    m1, m2, m3, m4, m5 = 1, 0, 1, 1, 0

    # Encryption
    r1, c1 = EGA_encrypt(m1, public_key)
    r2, c2 = EGA_encrypt(m2, public_key)
    r3, c3 = EGA_encrypt(m3, public_key)
    r4, c4 = EGA_encrypt(m4, public_key)
    r5, c5 = EGA_encrypt(m5, public_key)

    print("Encrypted values:")
    print(f"(r1, c1) = ({r1}, {c1})")
    print(f"(r2, c2) = ({r2}, {c2})")
    print(f"(r3, c3) = ({r3}, {c3})")
    print(f"(r4, c4) = ({r4}, {c4})")
    print(f"(r5, c5) = ({r5}, {c5})")

    # Combine ciphertexts
    r = (r1 * r2 * r3 * r4 * r5) % PARAM_P
    c = (c1 * c2 * c3 * c4 * c5) % PARAM_P
    print(f"Combined ciphertext: (r, c) = ({r}, {c})")

    # Decrypt combined ciphertext
    gm = EG_decrypt_additive(r, c, private_key)
    print(f"Decrypted g^m: {gm}")

    # Brute force to find m
    m = bruteLog(PARAM_G, gm, PARAM_P)
    print(f"Recovered m: {m}")

    # Verify result
    expected_m = m1 + m2 + m3 + m4 + m5
    print(f"Expected m: {expected_m}")
    print(f"Decryption successful: {m == expected_m}")


if __name__ == "__main__":
    additive_homomorphic_demo()
